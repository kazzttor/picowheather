{
  "hardware": {
    "board": "pico",
    "scan_i2c_on_start": true,
    "auto_detect_devices": true
  },
  "display": {
    "type": "ssd1306_i2c",
    "i2c_bus": 0,
    "width": 128,
    "height": 64,
    "address": 60,
    "pins": {
      "sda": "i2c0_sda",
      "scl": "i2c0_scl"
    }
  },
  "i2c_buses": {
    "i2c0": {
      "enabled": true,
      "frequency": 400000,
      "pins": {
        "sda": "i2c0_sda",
        "scl": "i2c0_scl"
      }
    },
    "i2c1": {
      "enabled": true,
      "frequency": 400000,
      "pins": {
        "sda": "i2c1_sda",
        "scl": "i2c1_scl"
      }
    }
  },
  "devices": {
    "sensors": {
      "enabled": true,
      "i2c_bus": 1,
      "aht20": {
        "enabled": true,
        "address": 56
      },
      "bmp280": {
        "enabled": true,
        "address": 119
      }
    }
  },
  "buttons": {
    "enabled": false
  },
  "time": {
    "auto_sync": false,
    "manual_hour": 20,
    "manual_minute": 25,
    "manual_day": 6,
    "manual_month": 2,
    "manual_year": 2026,
    "timezone": 0
  },
  "system": {
    "enable_console": true,
    "enable_diagnostic": true,
    "log_level": "INFO",
    "locale": "pt_BR"
  }
